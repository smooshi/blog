<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="sidebar">
  <div id="logo">
    <%= link_to root_path do %>
      <%= image_tag "logo.png" %>
    <% end %>
  </div>

  <ul>
    <li class="category">Website</li>
    <li><%= link_to "Blog", posts_path %></li>
    <li><%= link_to "About", about_path %></li>
    <li><%= link_to "Contact", contact_path %></li>
  </ul>

  <ul>
    <li class="category">Social</li>
    <li></li>
  </ul>
</div>

<div id="main_content">
  <div id="header">

    <p><%= link_to "Ravintelisofta", root_path %></p>

      <div class="buttons">
        <% if user_signed_in? %>
          <button class="button"><%= link_to "New Post", new_post_path %></button>
          <button class="button"><%= link_to "Edit Info", edit_user_registration_path %></button>
          <button class="button"><%= link_to "Logout", destroy_user_session_path, :method => :delete %></button>
        <% else %>
          <button class="button"><%= link_to "Login", new_user_session_path %></button>
        <% end %>
      </div>
    <% flash.each do |name, message| %>
        <%= content_tag(:div, message, class: "alert") %>
    <% end %>
  </div>


  <%= yield %>
</div>

</body>
</html>

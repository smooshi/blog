
<div id="post_content">
  <p id="notice"><%= notice %></p>

  <p class="title">
    <h1><%= @post.title %></h1>
  </p>

  <p class="body">
    <%= @post.body %>
  </p>

  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> Ago
  </p>

  <%= link_to 'Edit', edit_post_path(@post) %>
</div>
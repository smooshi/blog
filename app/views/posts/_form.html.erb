<div id="page_wrapper">
  <div id="content">
    <% if current_page?(new_post_path) %>
        <h1>Create New Post:</h1>
    <%else%>
        <h1>Edit Post:</h1>
    <% end %>
    <%= form_for(@post) do |f| %>
      <% if @post.errors.any? %>
        <div id="errors">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>

        </div>
      <% end %>

      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>

      <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
      </p>

      <p><%= f.submit %></p>
    <% end %>
    </div>
</div>